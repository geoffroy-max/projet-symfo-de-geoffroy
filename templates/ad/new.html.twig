{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %} creation d'une annonce {% endblock %}
{% form_theme form 'ad/_collection.html.twig' %}


{% block body %}

    <div class="container">

        <h1>creer une nouvelle annonce</h1>
                {{ form_start(form) }}
           <div class="row">
               <div class="col">
                   <div class="alert alert-light">
                       <h2>Information generale</h2>
                       <hr>
                       {{ form_row(form.title) }}
                       {{ form_row(form.slug) }}
                       {{ form_row(form.price) }}
                       {{ form_row(form.rooms) }}
                   </div>
                   <div class="alert alert-light">
                       <h2> Les details</h2>
                       <hr>
                       {{ form_row(form.introduction) }}
                       {{ form_row(form.content) }}

                   </div>
               </div>
               <div class="col">
                   <div class="alert alert-light">
                       <h2>Image de l'annonce</h2>
                       <hr>
                       {{ form_row(form.coverImage) }}
                       {{ form_row(form.images) }}
                   </div>
               </div>

           </div>

        <div class="alert alert-success clearfix ">
            <h2 class="alert alert-heading">sauvegarde mon annonce</h2>
            <p>Vous etes sur le point d'enregistrer une annonce</p>
            <button class="btn btn-primary float-right "> <i class="fas fa-check"></i> creer une annonce </button>
        </div>
                  {{ form_end(form) }}
    </div>
    {% endblock %}

{% block javascripts %}
<script src="{{ asset('js/ad.js') }}"></script>

{% endblock  %}