{% extends 'base.html.twig' %}

{% block title %} editer une annonce {% endblock %}
{% form_theme form 'ad/_collection.html.twig' %}
{% block body %}

    <div class="container">

        <h1 class="my-5">modifier l'annonce:{{ ad.title }}</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Information generale</h2>
                    <hr>
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.picture) }}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert heading">Details</h2>
                    <hr>
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.description) }}
                </div>
            </div>
        </div>

        </div>


        <button class="btn btn-primary"> renregistrer les modifications d'une annonce</button>
        {{ form_end(form) }}
    </div>


{% endblock %}


{% block javascripts %}
<script src="{{ asset('js/ad.js') }}"></script>
{% endblock %}

