{% extends 'base.html.twig' %}

{% block title %} modification du form{% endblock %}
{% block body %}
<div class="container">
    <h1 class="my-5">modifier</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <div class="alert-heading">Informations generale</div>
                <hr>
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.picture) }}
            </div>
        </div>
        <div class="col">
            <div class="alert alert-light">
                <div class="alert-heading">Details</div>
                <hr>
                {{ form_row(form.introduction) }}
                {{ form_row(form.description) }}
                <hr>
                <p> vous pouvez enregistrer les modifications</p>
                <button type="submit" class="btn btn-primary"> <i class="fas fa-check"></i> enregistrer les modifications</button>

        </div>
    </div>

    {{ form_end(form) }}
</div>

{% endblock %}